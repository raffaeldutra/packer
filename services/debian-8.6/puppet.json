{
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "Debian_64",
    "iso_url": "debian-8.6.0-amd64-netinst.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-debian-8.6-amd64-puppet-{{build_type}}",
    "vm_name": "puppet-debian-8.6-amd64",
    "disk_size": "{{user `disk_size`}}",
    "guest_additions_path": "VBoxGuestAdditions.iso",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc><wait>",
      "auto ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-8.6/preseed.cfg ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo systemctl poweroff",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
      ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/debian/virtualbox.sh",
      "scripts/common/vagrant.sh",
      "scripts/common/packages.sh",
      "scripts/puppet/install.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": "{{user `compression_level`}}",
    "output": "puppet-debian-8.6-amd64-{{.Provider}}.box"
  }],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "10000",
    "headless": "false",
    "iso_checksum": "9479c5c2df72ae3878116c43fb42eefae53d1fe363ce514a6afc8289064b9f5f",
    "iso_checksum_type": "sha256",
    "memory": "1024",
    "mirror": "http://cdimage.debian.org/debian-cd",
    "ssh_timeout": "60m"
  }
}
